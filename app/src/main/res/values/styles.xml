<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--分割线-->
    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line</item>
    </style>


    <!--顶部框左按钮-->
    <style name="top_left_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <!--顶部框右按钮-->
    <style name="top_right_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>


    <!--登录与注册的输入框布局-->
    <style name="input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--登录与注册的输入框图片-->
    <style name="input_image">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <!--登录与注册的输入框图片-->
    <style name="input_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/textSize_M</item>
    </style>

    <!--首页底部按钮布局-->
    <style name="home_bottom_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--我的点击布局-->
    <style name="my_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!--我的点击布局图标-->
    <style name="my_item_tag">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--我的点击布局文字-->
    <style name="my_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/textSize_M</item>
    </style>


    <!--我的点击布局提示-->
    <style name="my_item_hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">@dimen/textSize_S</item>
    </style>



    <!--我的统计布局-->
    <style name="user_order_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!--我的统计标签-->
    <style name="user_order_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/textSize_M</item>
    </style>


    <!--产品优惠状态标签-->
    <style name="product_status_tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize_S</item>
    </style>

    <!--排序弹窗文字-->
    <style name="sort_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">@dimen/textSize_M</item>
    </style>


    <!--商品参数名称-->
    <style name="product_info_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--商品参数内容-->
    <style name="product_info_tag">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">@dimen/textSize_S</item>
    </style>

    <!--popwindow底部弹出动画-->
    <style name="product_info_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/textSize_S</item>
    </style>



</resources>
